@{
    ViewData["Title"] = "Manage devices";
}

<h1>Manage devices</h1>
<br>
<br>
<div class="row">
    <div class="col-lg-3 col-md-4 col-sm-12 mx-auto my-3 order-lg-2 order-md-2 order-sm-1 formBack">
        <h4 class="mb-4">Add/Update device</h4>
        <form id="deviceForm">
            <div class="mb-3 w-100">
                <label for="deviceId" class="form-label">Device ID</label>
                <input type="text" class="form-control" id="deviceId" placeholder="Enter devic id">
                <div class="invalid-feedback" id="deviceIdErr">
                </div>
            </div>
            <div class="mb-3 w-100">
                <label for="deviceName" class="form-label">Device name</label>
                <input type="text" class="form-control" id="deviceName" placeholder="Enter device name">
                <div class="invalid-feedback" id="deviceNameErr">
                </div>
            </div>
            <button type="submit" class="btn btnColor" id="formBtn">Add device</button>
        </form>
    </div>
    <div class="col-lg-8 col-md-8 col-sm-12 my-3 htthorder-lg-1 order-md-1 order-sm-2">
        <table class="table table-sm">
            <thead>
                <tr>
                    <th>Device ID</th>
                    <th>Device name</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody id="tableData"></tbody>
        </table>
        <nav id="pagination" class="d-none">
            <ul class="pagination justify-content-end">
                <li class="page-item disabled" id="previous">
                    <button class="page-link pagColor" id="btnPrevious">
                        <span>&laquo;</span>
                    </button>
                </li>
                <li class="page-item" id="home">
                    <button class="page-link pagColor" id="btnHome">Home (<span id="pageText">1</span>)</button>
                </li>
                <li class="page-item" id="next">
                    <button class="page-link pagColor" id="btnNext">
                        <span>&raquo;</span>
                    </button>
                </li>
            </ul>
        </nav>
    </div>
</div>
<div class="toast-container position-fixed top-0 end-0 p-3">
    <div id="toast" class="toast" role="alert" aria-live="assertive" aria-atomic="true" data-bs-delay="2500">
        <div class="">
            <img id="toastImg" src="" class="rounded m-auto" width="45px" height="45px">
            <strong id="toastText" class="m-auto"></strong>
        </div>
    </div>
</div>

<script src="~/js/devices.js"></script>
